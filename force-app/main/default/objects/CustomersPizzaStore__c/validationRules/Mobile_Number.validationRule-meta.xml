<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_Number</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(  Mobile_Number__c ,&quot;(\\d{10})?&quot;))</errorConditionFormula>
    <errorDisplayField>Mobile_Number__c</errorDisplayField>
    <errorMessage>Please Enter A valid Mobile Number</errorMessage>
</ValidationRule>
